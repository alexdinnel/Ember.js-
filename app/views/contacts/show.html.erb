<%= content_for(:title, "#{@contact.name} | Wikipages") %>

<h1><%= @contact.name %></h1>

<p>Phone: <%= @contact.phone %></p>
<p>Email: <%= @contact.email %></p>


<p><%= link_to "Edit", edit_contact_path(@contact), :class => "btn btn-default" %></p>
<p><%= link_to "Delete", contact_path(@contact), 
                         :confirm => "You sure?",
                         :method => "delete",
                         :class => "btn btn-danger" %></p>                
<p><%= link_to "Return to the contact listing", contacts_path %></p>
